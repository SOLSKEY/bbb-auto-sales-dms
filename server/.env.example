# Supabase Configuration (Server - Admin Operations)
# Get these from your Supabase project settings: https://app.supabase.com
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Server Port
PORT=4100

# ============================================
# SMS Reminder System (Twilio)
# ============================================
# Get these from your Twilio Console: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# Your app's base URL (for links in SMS messages)
APP_BASE_URL=https://your-app.netlify.app

# Enable/Disable SMS Scheduler (set to 'true' to enable)
ENABLE_SMS_SCHEDULER=true
